<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.gramin.sakhala.gramintracker.activity.DivisionActivity">


    <ImageView
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/division_icon"
        android:paddingTop="5dp"
        android:src="@drawable/forest_icon"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:layout_marginLeft="13dp"
        android:paddingTop="5dp"
        app:layout_constraintBaseline_toBaselineOf="@id/division_icon"
        android:text="@string/action_sign_in"
        app:layout_constraintLeft_toRightOf="@id/division_icon"
        android:id="@+id/division_name"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/black_overlay"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/division_icon"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</android.support.constraint.ConstraintLayout>
